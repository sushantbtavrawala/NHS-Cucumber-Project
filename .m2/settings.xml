<settings xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0 http://maven.apache.org/xsd/settings-1.1.0.xsd"
          xmlns="http://maven.apache.org/SETTINGS/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <!-- CAVEAT EMPTOR : this file is no longer used by CI pipeline, superceded by Docker build image -->
    <mirrors>
        <mirror>
            <id>Nexus</id>
            <name>Nexus Maven Central</name>
            <url>https://nexus.nonprod.dwpcloud.uk/repository/maven-public/</url>
            <mirrorOf>*</mirrorOf>
        </mirror>
    </mirrors>

    <servers>
        <server>
            <id>dwp-releases</id>
            <username>${env.MAVEN_REPO_USER}</username>
            <password>${env.MAVEN_REPO_PASS}</password>
        </server>
        <server>
            <id>dwp-snapshots</id>
            <username>${env.MAVEN_REPO_USER}</username>
            <password>${env.MAVEN_REPO_PASS}</password>
        </server>
    </servers>

    <profiles>
        <profile>
            <id>maven-repo-url-defined</id>
            <activation>
                <property>
                    <name>env.MAVEN_REPO_URL</name>
                </property>
            </activation>
            <properties>
                <dwp.maven.repo.url>${env.MAVEN_REPO_URL}</dwp.maven.repo.url>
            </properties>
        </profile>
        <profile>
            <id>maven-deploy-release-url-defined</id>
            <activation>
                <property>
                    <name>env.MAVEN_DEPLOY_RELEASE_URL</name>
                </property>
            </activation>
            <properties>
                <dwp.maven.deploy.release.url>${env.MAVEN_DEPLOY_RELEASE_URL}</dwp.maven.deploy.release.url>
            </properties>
        </profile>
        <profile>
            <id>maven-deploy-snapshot-url-defined</id>
            <activation>
                <property>
                    <name>env.MAVEN_DEPLOY_SNAPSHOT_URL</name>
                </property>
            </activation>
            <properties>
                <dwp.maven.deploy.snapshot.url>${env.MAVEN_DEPLOY_SNAPSHOT_URL}</dwp.maven.deploy.snapshot.url>
            </properties>
        </profile>
    </profiles>
</settings>
